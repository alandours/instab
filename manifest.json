{

  "manifest_version": 2,
  "name": "Instab",
  "description": "Open and save Instagram photos, videos, stories and IGTV.",
  "version": "1.5",
  "permissions": [
    "activeTab",
    "downloads",
    "storage"
  ],
  "icons": {
    "16": "icons/ig-16.png",
    "32": "icons/ig-32.png",
    "48": "icons/ig-48.png"
  },
  "browser_action": {
    "default_icon": "icons/ig-48.png",
    "default_title": "Instab settings",
    "default_popup": "html/settings.html"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["*://*.instagram.com/*"],
      "js": ["js/main.js"],
      "css": ["css/instab.css"]
    },
    {
      "matches": ["*://*.instagram.com/p/*"],
      "js": ["js/post.js"]
    },
    {
      "matches": ["*://*.instagram.com/*"],
      "exclude_globs": ["*instagram.com/p/*"],
      "js": ["js/feed.js"]
    }
  ]

}


