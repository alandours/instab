{
  "manifest_version": 3,
  "name": "Instab",
  "description": "Open and save Instagram photos, videos, stories and reels.",
  "version": "2.0.0",
  "permissions": [
    "downloads",
    "storage"
  ],
  "host_permissions": [
    "*://*.instagram.com/*"
  ],
  "icons": {
    "16": "icons/ig-16.png",
    "32": "icons/ig-32.png",
    "48": "icons/ig-48.png"
  },
  "action": {
    "default_icon": "icons/ig-48.png",
    "default_title": "Instab settings",
    "default_popup": "html/settings.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.instagram.com/*"],
      "js": ["js/main.js"],
      "css": ["css/instab.css"]
    },
    {
      "matches": ["*://*.instagram.com/p/*"],
      "js": ["js/post.js"]
    },
    {
      "matches": ["*://*.instagram.com/*"],
      "exclude_globs": ["*instagram.com/p/*"],
      "js": ["js/feed.js"]
    }
  ]
}
