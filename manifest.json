{

  "manifest_version": 2,
  "name": "Instab",
  "description": "Open and save Instagram photos, videos and stories.",
  "version": "1.0.1",

  "permissions": [
    "contextMenus",
    "activeTab",
    "downloads"
  ],

  "icons": {
    "16": "icons/ig-16.png",
    "32": "icons/ig-32.png",
    "48": "icons/ig-48.png"
  },

  "background": {
    "scripts": ["background.js"]
  },
  
  "content_scripts": [
    {
      "matches": ["*://*.instagram.com/*"],
      "js": ["instab.js"],
      "css": ["instab.css"]
    }
  ]

}


